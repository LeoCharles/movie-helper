/* pages/movies/movies-detail/movies-detail.wxss */
@import "../stars/stars-template.wxss";
.container {
  display: flex;
  flex-direction: column;
}
.head-container {
  overflow: hidden;
}
.head-img {
  width: 100%;
  height: 320rpx;
  /* CSS3图片模糊  */
  filter:blur(20px);
}
.head-img-hover {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
}
.main-title {
  margin-top: 50rpx;
  margin-left: 40rpx;
  font-size: 20px;
  font-weight: bold;
  color: #fff;
  letter-spacing: 2px;
}
.sub-title {
  margin-top: 30rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #fff;
}
.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.highlight-font {
  font-size: 24rpx;
  margin-right: 10rpx;
  color: #f21146;
}
.plain-font {
  font-size: 24rpx;
  margin-right: 30rpx;
  color: #999;
}
.movie-img {
  position: absolute;
  top: 160rpx;
  right: 30rpx;
  width: 176rpx;
  height: 240rpx;
}
.summary {
  margin: 40rpx;
  color: #777;
}
.original-title {
  margin-bottom: 40rpx;
}
.original-title text {
  font-size: 16px;
  font-weight: bold;
  color: #1f3463; 
}
.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}
.hr {
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}
.synopsis {
  display: flex;
  flex-direction: column;
  margin: 40rpx;
}
.synopsis-font {
  color: #999;
}
.summary-content {
  margin-top: 20rpx;
  letter-spacing: 1px;
  text-indent: 2em;
  text-align: justify;
}
.cast {
  display: flex;
  flex-direction: column;
  margin: 40rpx;
}
.cast-font {
  margin-bottom: 40rpx;
  color: #999;
}
.cast-scroll-view {
  white-space: nowrap;
}
.cast-container {
  display: inline-flex;
  flex-direction: column;
  margin-right: 40rpx;
  margin-bottom: 50rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}
.cast-img {
  width: 170rpx;
  height: 210rpx;
}
.cast-name {
  margin: 10rpx auto 0;
}