/* pages/movies/movies.wxss */
@import "movie-list/movie-list-template.wxss";
@import "movie-grid/movie-grid-template.wxss";
.container {
  background-color: #f2f2f2;
}
.movies-template {
  margin-bottom: 30rpx;
}
.search {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
}
.search-img {
  margin: auto 0 auto 20rpx;
}
.xx-img {
  width: 28rpx;
  height: 28rpx;
  margin: auto 0 auto 20rpx;
}
.placeholder {
  margin-left: 20rpx;
  font-size: 14px;
  color: #d1d1d1;
}
.search input {
  height: 100%;
  width: 580rpx;
  margin-left: 20px;
  font-size: 14px;
}
.search-pannel {
  position: absolute;
  top: 80rpx;
}
